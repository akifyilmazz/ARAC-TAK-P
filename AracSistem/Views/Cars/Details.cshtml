@model AracSistem.Models.Arac
@{
    ViewBag.Title = "CarsDetails";
    int i = 0;
}

@section HeaderCss{
    <link href="~/Content/css/Shared/_Layout.css" rel="stylesheet" / >
    <link href="~/Content/css/Home/CarsDetails/CarsDetails.css" rel="stylesheet" />
}
<section>
    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Cars")">Araçlar</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Araç Ayrıntı</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        <a href="@Url.Action("Edit","Cars", new { Arac_Id = Model.Arac_Id})" class="btn btn-success">Düzenle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <!-- end: Card header -->
                    <div class="card-header border-0">
                        <h2 class="mb-0" style="text-align:left;font-weight:bold">@Model.Arac_Plaka</h2>
                    </div>
                    <!-- end: Card header -->
                    <div class="nav-wrapper col-md-4" style="margin-left:15px">
                        <ul class="nav nav-pills nav-fill flex-column flex-md-row" id="tabs-icons-text" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link mb-sm-3 mb-md-0 active" id="tabs-icons-text-1-tab" data-toggle="tab" href="#tabs-icons-text-1" role="tab" aria-controls="tabs-icons-text-1" aria-selected="true"><i class="ni ni-cloud-upload-96 mr-2"></i>Araç</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mb-sm-3 mb-md-0" id="tabs-icons-text-2-tab" data-toggle="tab" href="#tabs-icons-text-2" role="tab" aria-controls="tabs-icons-text-2" aria-selected="false"><i class="ni ni-bell-55 mr-2"></i>Ruhsat</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="tabs-icons-text-1" role="tabpanel" aria-labelledby="tabs-icons-text-1-tab">
                                    <div class="col-xl-3 col-md-6">
                                        <div class="card card-stats">
                                            <!-- Card body -->
                                            <div class="card-body detay">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h5 class="card-title text-uppercase text-muted mb-0">Plaka</h5>
                                                        <span class="h2 font-weight-bold mb-0">
                                                            @Model.Arac_Plaka
                                                        </span>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h5 class="card-title text-uppercase text-muted mb-0">Şase</h5>
                                                        <span class="h2 font-weight-bold mb-0">
                                                            @Model.Arac_Sase
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tabs-icons-text-2" role="tabpanel" aria-labelledby="tabs-icons-text-2-tab">
                                    <div class="col-xl-3 col-md-6">
                                        <div class="card card-stats">
                                            <div class="card-body detay">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h5 class="card-title text-uppercase text-muted mb-0">Ruhsat Ekleme Tarihi</h5>
                                                        <span class="h2 font-weight-bold mb-0">
                                                            @Model.Ruhsat.Ruhsat_EklenmeTarih
                                                        </span>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h5 class="card-title text-uppercase text-muted mb-0">Ruhsat No</h5>
                                                        <span class="h2 font-weight-bold mb-0">
                                                            @Model.Ruhsat.Ruhsat_No
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

<hr />

<section>
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <h2 class="mb-0" style="text-align:left;font-weight:bold">Araç İşlem</h2>
                    </div>
                    <!-- Light table -->
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="sort" data-sort="completion">#</th>
                                    <th scope="col" class="sort" data-sort="name">KİLOMETRE</th>
                                    <th scope="col" class="sort" data-sort="name">AÇIKLAMA</th>

                                </tr>
                            </thead>
                            <tbody class="list ayrinti">
                               
                                @foreach (var item in Model.Arac_Islem)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="media align-items-center">

                                                <div class="media-body">
                                                    <span class="name mb-0 text-sm">@(i+1)</span>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="budget">
                                           @item.AracIslem_Km<span class="name mb-0 text-sm cssBold">&nbsp&nbsp₺</span>
                                        </td>

                                        <td class="budget">
                                            <span>@item.AracIslem_Aciklama</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</section>