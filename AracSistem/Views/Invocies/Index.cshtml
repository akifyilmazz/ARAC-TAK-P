@model List<AracSistem.Models.Fatura>
@{
    ViewBag.Title = "invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}
@section HeaderCss{
    <link href="~/Content/css/Home/invoices/invoices.css" rel="stylesheet" />
    <link href="~/Content/css/Shared/_Layout.css" rel="stylesheet" />

}
<section>
    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Faturalar</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        <a href="@Url.Action("Create","Invocies")" class="btn btn-sm btn-neutral">Fatura Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-6">
                                <h2 class="mb-0" style="text-align:left;font-weight:bold">Fatura Bilgileri</h2>
                            </div>
                            <div class="col-md-6 searc">
                                <form class="navbar-search navbar-search-light mr-sm-3" id="navbar-search-main">
                                    <div class="form-group mb-0">
                                        <div class="input-group input-group-alternative input-group-merge">
                                            <input class="form-control" placeholder="Ara *" type="text">
                                            <div class="input-group-prepend">
                                                <a href="#" class="input-group-text"><i class="fas fa-search"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- end: Card header -->
                    <!-- Light table -->
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="sort" data-sort="completion">#</th>
                                    <th scope="col" class="sort" data-sort="name">Fatura Tarihi</th>
                                    <th scope="col" class="sort" data-sort="budget">Fatura Tutarı</th>
                                    <th scope="col" class="sort" data-sort="status">Açıklama</th>
                                    <th scope="col" class="sort text-center" data-sort="status"></th>
                                </tr>
                            </thead>
                            <tbody class="list ayrinti">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="media align-items-center">

                                                <div class="media-body">
                                                    <span class="name mb-0 text-sm">1</span>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="budget">
                                            @item.Fatura_Tarih
                                        </td>
                                        <td class="budget">
                                            @item.Fatura_Tutar <span class="name mb-0 text-sm cssBold">₺</span>
                                        </td>
                                        <td class="budget">
                                            <span>@item.Fatura_Aciklama</span>
                                        </td>
                                        <td class="text-center">
                                            <a class="btn btn-sm btn-icon-only text-light" href="@Url.Action("Details","Invocies", new {id =item.Fatura_Id })" role="button" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- Card footer -->
                    <div class="card-footer py-4">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
                                        <i class="fas fa-angle-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fas fa-angle-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
</section>