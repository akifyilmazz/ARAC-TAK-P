@model AracSistem.Models.Fatura
@{
    ViewBag.Title = "updateInvoices";
}

@section HeaderCss{
    <link href="~/Content/css/Home/invoices/updateInvoices/updateInvoices.css" rel="stylesheet" />
    <link href="~/Content/css/Shared/_Layout.css" rel="stylesheet" />
}

<section>
    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("invoices","Home")">Faturalar</a></li>
                                <li class="breadcrumb-item "><a href="@Url.Action("invocesDetails","Home")"> Fatura Detay</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Fatura Düzenle</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        <a href="javascript:;" onclick="InvociesEdit()" class="btn btn-success">Güncelle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-6">
                                <h2 class="mb-0" style="">Fatura Düzenle</h2>
                            </div>
                        </div>
                    </div>
                    <!-- end: Card header -->
                    <!-- card body -->
                    <div class="card-body">
                        <form>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-username">Fatura Tarihi</label>
                                            <input class="form-control" type="datetime" value="@Model.Fatura_Tarih" id="input-faturaTarih">
                                            <input style="display:none" class="form-control" id="input-faturaId" value="@Model.Fatura_Id">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label">Fatura Tutarı</label>
                                            <input id="input-faturaTutar" class="form-control" placeholder="Fatura tutarı girinz  *" value="@Model.Fatura_Tutar">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label">Açıklama</label>
                                            <textarea rows="4" class="form-control" placeholder="Adres Bilgileri Giriniz ..." id="input-aciklama">@Model.Fatura_Aciklama</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end: card body -->
                    <!-- Card footer -->
                    <div class="card-footer py-4">
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>


@section CreateStok{
    <script>
        function InvociesEdit() {
            data = {
                Fatura_Id: $('#input-faturaId').val(),
                IslemTur_Id: 2,
                OdemeSekli_Id: 1,
                AracIslem_Id: 1,
                Fatura_Tarih: $('#input-faturaTarih').val(),
                Fatura_Tutar: $('#input-faturaTutar').val(),
                Fatura_Aciklama: $('#input-aciklama').val(),
            }
            $.ajax({
                url: '/Invocies/Edit/',
                type: 'POST',
                data: data,
                dataType: 'json',
                success: function (data) {
                    if (data.Fatura_Id > 0) {
                        toastr.success('Başarıyla Güncellendi! Yönlendiriliyorsunuz');
                        setTimeout(function () {
                            window.location = "/Invocies"
                        }, 250)
                    }
                },
                error: function (hata, ajaxOptions, thrownError) {
                    alert(hata.status);
                    alert(thrownError);
                    alert(hata.responseText);
                }
            });
        }
    </script>
}