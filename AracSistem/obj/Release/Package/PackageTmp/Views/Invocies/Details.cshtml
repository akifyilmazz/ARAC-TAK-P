<section>
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <h2 class="mb-0" style="text-align:left;font-weight:bold">Stok İşlem</h2>
                    </div>
                    <!--end: Card header -->
                    <!-- Light table -->
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="sort" data-sort="completion">#</th>
                                    <th scope="col" class="sort" data-sort="completion">Stok Ad</th>
                                    <th scope="col" class="sort" data-sort="completion">Miktar</th>
                                    <th scope="col" class="sort" data-sort="completion">İşlem Tarihi</th>
                                    <th scope="col" class="sort" data-sort="completion">İşlem Türü</th>
                                    <th scope="col" class="sort" data-sort="completion">Birim Satış Fiyatı</th>
                                </tr>
                            </thead>
                            <tbody class="list ayrinti">
                                @foreach (var item in Model.Stok_Islems)
                                {

                                    i++;
                                    <tr>
                                        <th scope="row">
                                            <div class="media align-items-center">

                                                <div class="media-body">
                                                    <span class="name mb-0 text-sm">@i</span>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="budget">
                                            <span class="name mb-0 text-sm cssBold">@item.Stok.Stok_Ad</span>
                                        </td>
                                        <td class="budget">
                                            <span>@item.StokIslem_Miktar</span>
                                        </td>
                                        <td class="budget">
                                            <span>@item.StokIslem_Tarih</span>
                                        </td>
                                        <td class="budget">
                                            <span>@item.IslemTur.IslemTur_Ad</span>
                                        </td>
                                        <td class="budget">
                                            <span>@item.StokIslem_Tutar</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</section>

